{
  "private": true,
  "scripts": {
    "lint": "eslint *.js src tools",
    "postinstall": "cd node_modules/react-relay-network-modern-ssr && yarn build-lib",
    "relay-compiler": "relay-compiler --src src --exclude 'data/**' --schema src/data/schema.graphql",
    "start": "npm run relay-compiler && babel-node index.js",
    "update-schema": "babel-node tools/updateSchema.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "npm run update-schema",
      "git add src/data/schema.*"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@artsy/express-reloadable": "^1.4.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-relay": "~1.5.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "classnames": "^2.2.5",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-4catalyzer-react": "^0.4.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "farce": "^0.2.6",
    "found": "^0.3.11",
    "found-relay": "^0.3.0-alpha.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "graphql": "^0.13.2",
    "graphql-relay": "^0.5.5",
    "husky": "^0.14.3",
    "isomorphic-fetch": "^2.2.1",
    "keycode": "^2.2.0",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-relay": "~1.5.0",
    "react-relay-network-modern": "^2.3.0",
    "react-relay-network-modern-ssr": "https://github.com/nodkz/react-relay-network-modern-ssr/archive/v1.1.0.tar.gz",
    "regenerator-runtime": "^0.11.1",
    "relay-compiler": "~1.5.0",
    "relay-runtime": "~1.5.0",
    "serialize-javascript": "^1.5.0",
    "todomvc-app-css": "^2.1.1",
    "todomvc-common": "^1.0.5",
    "webpack": "^4.7.0",
    "webpack-dev-middleware": "^3.1.3"
  },
  "devDependencies": {
    "postinstall-postinstall": "^1.0.0"
  }
}
